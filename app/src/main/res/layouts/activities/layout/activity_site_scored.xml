<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <!--    <ScrollView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent">-->

        <!--        <RelativeLayout-->

        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent">-->

        <RelativeLayout
            android:id="@+id/parentIntentGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/intentogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="IndentoGo"
                android:textColor="#1A378E"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/intentogo"
                android:background="#ffffff"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_30"
                android:text="2345 Hickory Av Nashville, Tennesses 30767"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:font="@{`bold`}" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/parentIntentGo"
            android:layout_marginTop="40dp"
            android:background="@drawable/layout_bg"
            android:elevation="2dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tvReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="This site scored a"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.vaibhavlakhera.circularprogressview.CircularProgressView
                android:id="@+id/progressView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                app:animate="true"
                app:animateDuration="600"
                app:fillColor="#1A378E"
                app:progress="75"
                app:progressColor="#1A378E"
                app:progressRoundCap="true"
                app:progressTextColor="#FFF"
                app:progressTextEnabled="true"
                app:progressTextSize="32sp"
                app:progressTextType="progress"
                app:progressWidth="12dp"
                app:startAngle="0"
                app:total="100"
                app:totalColor="#FFFFFF"
                app:totalWidth="20dp" />

            <Button
                android:id="@+id/btnSubmt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_submit"
                android:drawableTint="#ffffff"
                android:elevation="2dp"
                android:text="Submit" />

        </RelativeLayout>

        <!--        </RelativeLayout>-->

        <!--    </ScrollView>-->

    </RelativeLayout>
</layout>